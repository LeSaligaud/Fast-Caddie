{% extends 'backoffice.html.twig' %}


{% block title %} {{ parent() }} | Gestion employé {% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="messageSuccess quitter">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('echec') %}
        <div class="messageEchec quitter">
            {{ message }}
        </div>
    {% endfor %}

    <div class="conteneur-global">
    <div class="conteneur-secondaire text-center">
        <h1>Liste des employés</h1>

    </div>

    <div class="conteneur-secondaire">
        <table class="table border mt-3">
            <thead class="thead-dark text-center">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Photo</th>
                <th scope="col">Etat</th>
                <th scope="col">Date d'embauche</th>
                <th scope="col">  </th>
                <th scope="col">  </th>
            </tr>
            </thead>
            <tbody class="text-center">
            {% for employe in employes %}
                <tr id="{{ employe.id }}">

                    <td>{{ employe.id }}</td>
                    <td>{{ employe.nom }}</td>
                    <td>{{ employe.prenom }}</td>
                    <td>{{ employe.pseudo }}</td>

                    <td>
                        <img class="lazy" src="{{ asset('assets/images/loader.gif') }}" data-src="{{ asset('images/imagesUpload/') }}{{ employe.photo }}" style="width: 100px" alt="Photo de l'employe">
                        <noscript>
                            <img src="{{ asset('images/imagesUpload/') }}{{ employe.photo }}" style="width: 100px" alt="Photo de l'employe">
                        </noscript>
                    </td>

                    <td>{{ employe.etat }}</td>
                    <td>{{ employe.dateInscription | date}}</td>
                    <td><a href="{{ path('edit_employe', {'id': employe.id}) }}"><i class="fas fa-user-edit"></i></a></td>
                    <td><a href="{{ path('delete_employe', {'id':employe.id}) }}"> <i class="fas fa-sign-out-alt text-danger"></i></a></td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}