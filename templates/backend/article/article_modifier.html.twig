{% extends 'backoffice.html.twig' %}

{% block title %} {{ parent() }} | Modification articles {% endblock %}

{% block body %}

    <div class="container w-75">
        <h1 class="mt-3 text-center">Modifier un article</h1>

        {{ form_start(formArticle) }}
        {{ form_errors(formArticle) }}

        <div class="mb-3">
            {{ form_row(formArticle.nom) }}
        </div>

        <div class="mb-3">
            {{ form_row(formArticle.categorie) }}
        </div>

        {% if article.type is not null %}
            <div id="divType" style="display: flex">

        {% else %}
            <div id="divType" style="display: none">

        {% endif %}
            <div class="mb-3">
                {{ form_row(formArticle.type) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_row(formArticle.prix) }}
        </div>

        <div class="mb-3">
            {{ form_row(formArticle.description) }}
        </div>

        <div class="mb-3 w-25">
             {{ form_row(formArticle.stock) }}
        </div>

        <div class="d-flex align-items-center justify-content-between">
            {{ form_row(formArticle.imageFile, { 'attr' : {"onChange" : "loadFile(event)"}}) }}

            <button class="btn-back" type="submit">Modifier</button>
        </div>

        <div class="col-md-12 text-center mt-2">
            <img id="image" src="{{ asset('images/imagesUpload/' ~ article.image) }}" style='width:200px' alt="Photo de {{ article.nom }}">
        </div>

        {{ form_end(formArticle) }}

    </div>

{% endblock %}