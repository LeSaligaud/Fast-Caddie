{% extends 'backoffice.html.twig' %}

{% block title %} {{ parent() }} | Ajout article {% endblock %}

{% block body %}

    <div class="conteneur-global">
        <h1 class="mt-5 text-center">Ajouter un article</h1>

        {{ form_start(formArticle) }}

        {{ form_errors(formArticle) }}
        {# form_errors() permet d'afficher les msg d'erreurs globales je le met en haut pour que ce soit joli#}

        <div class="mb-3">
            {{ form_row(formArticle.nom) }}
        </div>

        <div class="mb-3">
            {{ form_row(formArticle.categorie) }}
        </div>

        <div id="divType" style="display: none">
            <div class="mb-3">
                {{ form_row(formArticle.type) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_row(formArticle.prix) }}
        </div>

        <div class="mb-3">
            {{ form_row(formArticle.description) }}
        </div>

        <div class="mb-3 w-25">
            {{ form_row(formArticle.stock) }}
        </div>

        <div class="d-flex align-items-center justify-content-between">
            {{ form_row(formArticle.image, { 'attr' : {"onChange" : "loadFile(event)"}}) }}

            <button type="submit" class="btn-back"><i class="fas fa-plus"></i> Ajouter</button>
        </div>


        <div class="col-md-12 text-center mt-2">

            <img src="" alt="Image de l'article" id="image" style='width:500px'>

        </div>


        {{ form_end(formArticle) }}

    </div>

{% endblock %}
