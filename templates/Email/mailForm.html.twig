{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Mail{% endblock %}

{% block body %}
    <div class="conteneur-fluid contact_form">
    <h1 class="contact_title">Contacter Fast Caddie</h1>
    <form id="contact-form" method="post" action="{{ path('mail') }}" role="form">

        <div class="box_contact">

            <div class="row">
                <div class="col-md">
                    <div class="form-group">
                        <label for="form_name">Prénom *</label>
                        <input id="form_name" type="text" name="name" class="form-control" placeholder="Veuillez saisir votre prénom *" required="required" data-error="Firstname is required.">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label for="form_lastname">Nom *</label>
                        <input id="form_lastname" type="text" name="surname" class="form-control" placeholder="Veuillez saisir votre nom *" required="required" data-error="Lastname is required.">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <div class="form-group">
                        <label for="form_email">Email *</label>
                        <input id="form_email" type="email" name="email" class="form-control" placeholder="Veuillez saisir votre email *" required="required" data-error="Valid email is required.">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group">
                        <label for="form_need">Spécifiez l'objet de votre mail *</label>
                        <select id="form_need" name="need" class="form-control" required="required" data-error="Spécifiez l'objet de votre mail">
                            <option value="Informations">Informations</option>
                            <option value="Problème avec une commande">Problème avec une commande</option>
                            <option value="Autre">Autre</option>
                        </select>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <div class="form-group">
                        <label for="form_message">Message *</label>
                        <textarea id="form_message" name="message" class="form-control" placeholder="Message *" rows="4" required="required" data-error="Please, leave us a message."></textarea>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="col-md text-center">
                    <input type="submit" class="btn btn-success btn-send" value="Envoyer">
                    <hr>
                    <a href="{{ path('home') }}"> <img id="logo_fastcaddie" src="{{ asset("assets/images/logoFastCaddie.png") }}"> </a>
                </div>
            </div>
            <div class="row">
                <div class="col-md">
                    <p class="text-muted">
                        <strong>*</strong> Ces champs sont requis
                </div>
            </div>
        </div>

    </form>
    </div>
{% endblock %}